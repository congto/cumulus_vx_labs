# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback
    address 10.0.1.252/32

# The primary network interface
auto enp0s3
iface enp0s3 inet dhcp
pre-up sleep 2

auto enp0s8
iface enp0s8
    address 10.0.1.252/32
    post-up for i in {1..3}; do arping -q -c 1 -w 0 -i enp0s8 10.0.1.3; sleep 1; done
    post-up ip route del default via 10.0.2.2 dev enp0s3 || true
    post-up ip route add 0.0.0.0/0 nexthop via 10.0.1.3 dev enp0s8 onlink nexthop via 10.0.1.4 dev enp0s9 onlink

auto enp0s9
iface enp0s9
    address 10.0.1.252/32
    post-up for i in {1..3}; do arping -q -c 1 -w 0 -i enp0s9 10.0.1.4; sleep 1; done
    post-up ip route del default via 10.0.2.2 dev enp0s3 || true
    post-up ip route add 0.0.0.0/0 nexthop via 10.0.1.3 dev enp0s8 onlink nexthop via 10.0.1.4 dev enp0s9 onlink

