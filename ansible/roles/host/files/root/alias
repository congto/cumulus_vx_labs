export LS_OPTIONS='--color=auto'
 eval "`dircolors`"

alias ssh='ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no'
alias h='history | tail -25'
alias ls='ls $LS_OPTIONS'
alias ll='ls $LS_OPTIONS -l'
alias lls='ls $LS_OPTIONS -l'
alias lsl='ls $LS_OPTIONS -l'
alias lla='ls $LS_OPTIONS -la'
alias lt='ls -gGrt'
alias lz='ls -gGrS'
alias lss='less'
alias sls='less'
alias t='telnet'
alias psef='ps -ef | grep'
alias ifc='/sbin/ifconfig -a | egrep "inet addr|encap"'
alias brshow='brctl show'
alias bcm='/usr/lib/cumulus/bcmcmd'
alias cl='clear'
alias in='egrep'
alias pullin='source /media/node/bin/pullin.sh'
alias du1='du -h  --max-depth=1'
alias duk='du -k  --max-depth=1 | sort -n'
alias ebnat='ebtables -t nat -L'
alias ipl='iptables -L -v'
alias show='netshow'
alias si='netshow interface'
alias ni='netshow interface'
alias shb='netshow interface bond'
alias shint='netshow interface'
alias mylldp='mylldp.py'
alias lldp='mylldp.py'
alias sln='lldpctl | egrep "Inter|SysN|Mgm|PortDes"'
alias msb='mstpctl showbridge'
alias msd='mstpctl showportdetail'
alias msp='mstpctl showport'
alias realias='source ~/.alias'
alias nei='netshow neighbors'
alias mnt_mbp='mkdir -p /mnt/pschmidt-mbp ; mount -o soft -t nfs 10.50.10.25:/Users/pschmidt/Shared /mnt/pschmidt-mbp'
alias umnt_mbp='cd ~ ; umount /mnt/pschmidt-mbp'
alias ipv4='ip -o addr show | grep "inet "'
alias ipv6='ip -o addr show | grep "inet6 "'
alias getlatestppc='scp pschmidt@monster-01://home/build/ci/cumulus/CumulusLinux-2.5_br/latest_powerpc/build/images/cumulus-install-powerpc.bin ~/'
alias getlatestx86='scp pschmidt@monster-01://home/build/ci/cumulus/CumulusLinux-2.5_br/latest_powerpc/build/images/cumulus-install-amd64.bin ~/'


